{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Dev Server (coreclr)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-wasm",
      "program": "dotnet",
      "args": [
        "run",
        "--configuration",
        "Debug"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_URLS": "http://127.0.0.1:5000"
      },
      "serverReadyAction": {
        "pattern": "App url:\\s+http://127\\.0\\.0\\.1:(\\d+)/",
        "uriFormat": "http://127.0.0.1:%s/",
        "action": "openExternally"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true
      }
    },
    {
      "name": "Run ConsoleApp",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-console",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/ConsoleApp/BKBToolConsole.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false
      }
    }
  ],
  "compounds": [
    {
      "name": "Run Web + Console",
      "configurations": [
        "Run Dev Server (coreclr)",
        "Run ConsoleApp"
      ]
    }
  ]
}